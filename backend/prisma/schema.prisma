generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TreeNode {
  address   String
  balance    Int
  path      String[]
  indices   String[]
  root      String
  createdAt DateTime  @default(now())

  @@unique([ address, root])
}

model Tree {
  root        String
  createdAt   DateTime  @default(now())

  @@unique([ root])
}

enum HashScheme {
  Keccak256
}

